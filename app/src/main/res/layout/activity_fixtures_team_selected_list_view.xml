<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:id="@+id/cardView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="1dp"
        android:layout_marginTop="2dp"
        android:layout_marginEnd="1dp"
        android:layout_marginBottom="2dp"
        app:cardCornerRadius="20dp"
        app:cardElevation="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="91dp"
            android:background="@color/teal_700"
            app:layout_constraintBottom_toTopOf="@+id/fixtureDateView1"
            app:layout_constraintEnd_toStartOf="@+id/requestDel"
            app:layout_constraintStart_toStartOf="@+id/requestDel"
            app:layout_constraintTop_toTopOf="@+id/fixtureDateView1">

            <TextView
                android:id="@+id/teamsPlayingView1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="21dp"
                android:layout_marginBottom="7dp"
                android:text="teams playing"
                android:textColor="#FFFFFF"
                app:layout_constraintBottom_toTopOf="@+id/fixtureDateView1"
                app:layout_constraintStart_toStartOf="@+id/fixtureDateView1"
                app:layout_constraintTop_toTopOf="parent" />

            <Button
                android:id="@+id/makeTeamAnnBtn"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_marginEnd="19dp"
                android:text="Make Announcement"
                app:cornerRadius="20dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/fixtureDateView1"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/fixtureDateView1"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="94dp"
                android:layout_marginBottom="16dp"
                android:text="date"
                android:textColor="#FFFFFF"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/makeTeamAnnBtn"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/teamsPlayingView1" />


        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>